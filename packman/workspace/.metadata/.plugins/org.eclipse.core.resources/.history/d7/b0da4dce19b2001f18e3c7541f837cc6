#ifndef MB_CONTROLLER
#define MB_CONTROLLER

//#include "xil_types.h" // Include Xilinx type definitions

	struct AXI_REGISTERS {
		uint32_t pm_x; // READ ONLY X position
		uint32_t pm_y; // READ ONLY Y position
		uint32_t pm_dir; // Direction of movement: 0-Left, 1-Down, 2-Right, 3-Up
		uint32_t pm_mv; // Movement on? 0-no, 1-yes

		uint32_t pellets[31]; // Pellet on? 31 rows, 28 lsb bitmapped | 0-off, 1-on
		uint32_t kill_mode; // Ghost killable skin? 0-no, 1-yes

		uint32_t g0_x;
		uint32_t g0_y;
		uint32_t g0_dir;
		uint32_t g0_mv;

		uint32_t g1_x;
		uint32_t g1_y;
		uint32_t g1_dir;
		uint32_t g1_mv;

		uint32_t g2_x;
		uint32_t g2_y;
		uint32_t g2_dir;
		uint32_t g2_mv;

		uint32_t g3_x;
		uint32_t g3_y;
		uint32_t g3_dir;
		uint32_t g3_mv;

		uint32_t reset; // Reset board NOT WORKING RN
		uint32_t ghost_reset; // Reset ghost - bitmapped to 4 lsb: Ex: b0101 = ghosts 2 and 0 in reset state. RESET MUST BE MANUALLY UNASSERTED >= 1 tick after assertion

	};



	static volatile struct AXI_REGISTERS* axi_reg = 0x44A00000;
//	extern volatile struct AXI_REGISTERS* axi_reg;

